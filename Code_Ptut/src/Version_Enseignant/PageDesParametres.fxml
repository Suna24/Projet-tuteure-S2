<BorderPane stylesheets="@../../../darkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Version_Enseignant.Controller">
   <top>
     <VBox prefHeight="32.0" prefWidth="1080.0" BorderPane.alignment="TOP_LEFT">
			<children>
				<MenuBar snapToPixel="false">
					<menus>
						<Menu mnemonicParsing="false" text="Exercice">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#PageNouvelExo" text="Nouveau" />
								<MenuItem mnemonicParsing="false" onAction="#ouvrir" text="Ouvrir" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem mnemonicParsing="false" text="Enregistrer" />
								<MenuItem mnemonicParsing="false" text="Enregistrer sous" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem mnemonicParsing="false" onAction="#quitter" text="Quitter" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Aide">
							<items>
								<MenuItem mnemonicParsing="false" text="Tutoriel" />
								<MenuItem mnemonicParsing="false" text="A propos" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Paramètres">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#pageParametres" text="Préférences" />
                        <CheckMenuItem mnemonicParsing="false" text="DarkMode" />
                     </items></Menu>
					</menus>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</MenuBar>
			</children>
		</VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="517.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Paramètres">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="25.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Taille de la police">
                     <HBox.margin>
                        <Insets right="300.0" />
                     </HBox.margin>
                  </Label>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField fx:id="taille" editable="false" prefHeight="31.0" prefWidth="167.0" />
                        <ListView fx:id="listeTailles" onMousePressed="#setParametreTaille" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Style de police">
                     <HBox.margin>
                        <Insets right="300.0" />
                     </HBox.margin>
                  </Label>
                  <VBox prefHeight="100.0" prefWidth="161.0">
                     <children>
                        <TextField fx:id="police" editable="false" />
                        <ListView fx:id="listePolices" onMousePressed="#setParametrePolice" prefHeight="69.0" prefWidth="153.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="145.0" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#retourPara" text="Retour">
                     <HBox.margin>
                        <Insets right="400.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Appliquer" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
